<div class="container">
  <div class="row">
    <div class="col-md-6">
      <form id="breedForm" class="inline-form">
        <label for="breed">Breed:</label>
        <input type="text" id="bname" name="fname" class="form-control" value="affenpinscher">
        <button type="button" class="btn btn-success" onclick="submitForm()">Submit</button>
      </form>
    </div>
    <div class="col-md-6">
      <div class="show_breed"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
	function submitForm() {
	  var breed_name =  $('#bname').val()
	  $.ajax({
	    url: "/fetch_breed",
	    type: "POST",
	    data: {breed: breed_name},
	  });
	}
</script>